            <Border Margin="0,60,150,48" CornerRadius="4" Background="{DynamicResource TextBoxColor}" Height="38" VerticalAlignment="Bottom">
                <Grid>
                    <TextBox x:Name="InstallPathBox" Background="{x:Null}" BorderBrush="{x:Null}" SelectionBrush="{StaticResource AccentColor}" VerticalContentAlignment="Center" VerticalScrollBarVisibility="Disabled" ScrollViewer.CanContentScroll="True" Margin="4,4,40,4" TextChanged="InstallPathBox_TextChanged" Foreground="{DynamicResource TextColor}"/>
                    <Button x:Name="ClearInstallPathBox" Visibility="Hidden" Background="{DynamicResource TextColor}"/>
                </Grid>
