                        <TextBox x:Name="ServerPathBox" Text="...\server.jar" SelectionBrush="{StaticResource AccentColor}" FontSize="18" TextChanged="ServerPathBox_TextChanged" Background="{x:Null}" BorderBrush="{x:Null}" VerticalAlignment="Center" Margin="4,0" Foreground="{DynamicResource TextColor}"/>
