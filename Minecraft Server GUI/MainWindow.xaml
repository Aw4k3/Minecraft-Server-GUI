                    <Grid>
                        <Label Content="Server Process ID" VerticalContentAlignment="Center" HorizontalAlignment="Left" Foreground="{DynamicResource TextColor}"/>
                        <Border Background="{DynamicResource TextBoxColor}" CornerRadius="4" Height="30" Width="160" HorizontalAlignment="Right">
                            <TextBox x:Name="InfoServerPID" VerticalContentAlignment="Center" Margin="0" Background="{x:Null}" BorderBrush="{x:Null}" SelectionBrush="{StaticResource AccentColor}" ScrollViewer.CanContentScroll="True" VerticalScrollBarVisibility="Disabled" IsReadOnly="True" FontSize="18" Padding="4,2,4,0" HorizontalContentAlignment="Right" Text="-----" Width="160" Foreground="{DynamicResource TextColor}"/>
