            <Button x:Name="BrowseInstallPath" Content="Browse" HorizontalAlignment="Right" Height="38" VerticalAlignment="Bottom" Width="140" Padding="0,2,0,0"  Click="BrowseInstallPath_Click" FontSize="18" Margin="0,0,0,48"/>
            <Button x:Name="CreateServer" Content="Create Server" Height="38" VerticalAlignment="Bottom" Padding="0,2,0,0" FontSize="18" Click="CreateServer_Click" IsEnabled="False"/>
        </Grid>
        <Grid x:Name="SettingsPanel" Grid.Column="1" Visibility="Collapsed" Opacity="{DynamicResource Opacity}">
            <!--Settings Window-->
            <ListView Margin="20" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Top">
                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListViewItem}">
                                    <ContentPresenter />
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
                <Label Content="Server" FontSize="36" FontFamily="Bahnschrift" Padding="0" Height="40" Foreground="{DynamicResource TextColor}"/>
