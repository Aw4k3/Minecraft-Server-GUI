                    <FlowDocument/>
                </RichTextBox>
            </Border>
            <ComboBox x:Name="ServerTypeSelect" HorizontalAlignment="Left" Margin="0,0,0,96" VerticalAlignment="Bottom" Width="250" Height="40" VerticalContentAlignment="Center">
