                            <TextBox x:Name="InfoServerUptime" Text="00:00:00" VerticalContentAlignment="Center" Margin="0" Background="{x:Null}" BorderBrush="{x:Null}" SelectionBrush="{StaticResource AccentColor}" ScrollViewer.CanContentScroll="True" VerticalScrollBarVisibility="Disabled" IsReadOnly="True" FontSize="18" Padding="4,2,4,0" HorizontalContentAlignment="Right" Foreground="{DynamicResource TextColor}"/>
                        </Border>
                    </Grid>
                    <Grid>
                        <Label Content="RAM Usage" VerticalContentAlignment="Center" HorizontalAlignment="Left" Foreground="{DynamicResource TextColor}"/>
                        <Border Background="{DynamicResource TextBoxColor}" CornerRadius="4,0,0,4" Height="30" Margin="0,0,60,0" Width="100" HorizontalAlignment="Right">
                            <TextBox x:Name="InfoRamUsage" Text="0" VerticalContentAlignment="Center" Margin="0" Background="{x:Null}" BorderBrush="{x:Null}" SelectionBrush="{StaticResource AccentColor}" ScrollViewer.CanContentScroll="True" VerticalScrollBarVisibility="Disabled" IsReadOnly="True" FontSize="18" Padding="4,2,4,0" HorizontalContentAlignment="Right" Foreground="{DynamicResource TextColor}"/>
                        </Border>
                        <ComboBox x:Name="InfoRamUsageUnit" VerticalContentAlignment="Center" Width="60" HorizontalAlignment="Right" Height="30" FontSize="20" SelectionChanged="InfoRamUsageUnit_SelectionChanged">
                            <ComboBoxItem Content="B" HorizontalContentAlignment="Right"/>
                            <ComboBoxItem Content="KB" HorizontalContentAlignment="Right"/>
                            <ComboBoxItem Content="MB" IsSelected="True" Width="150" HorizontalContentAlignment="Right"/>
                            <ComboBoxItem Content="GB" HorizontalContentAlignment="Right"/>
                        </ComboBox>
                    </Grid>
                    <Grid>
                        <Label Content="Available System Memory" VerticalContentAlignment="Center" HorizontalAlignment="Left" Foreground="{DynamicResource TextColor}"/>
                        <Border Background="{DynamicResource TextBoxColor}" CornerRadius="4,0,0,4" Height="30" Margin="0,0,60,0" Width="100" HorizontalAlignment="Right">
                            <TextBox x:Name="InfoSystemRAM" Text="0" VerticalContentAlignment="Center" Margin="0" Background="{x:Null}" BorderBrush="{x:Null}" SelectionBrush="{StaticResource AccentColor}" ScrollViewer.CanContentScroll="True" VerticalScrollBarVisibility="Disabled" IsReadOnly="True" FontSize="18" Padding="4,2,4,0" HorizontalContentAlignment="Right" Foreground="{DynamicResource TextColor}"/>
                        </Border>
                        <ComboBox x:Name="InfoSystemRAMUnit" VerticalContentAlignment="Center" Width="60" HorizontalAlignment="Right" Height="30" FontSize="20" SelectionChanged="ComboBox_SelectionChanged">
                            <ComboBoxItem Content="B" HorizontalContentAlignment="Right"/>
                            <ComboBoxItem Content="KB" HorizontalContentAlignment="Right"/>
                            <ComboBoxItem Content="MB" IsSelected="True" Width="150" HorizontalContentAlignment="Right"/>
                            <ComboBoxItem Content="GB" HorizontalContentAlignment="Right"/>
                        </ComboBox>
                    </Grid>
                </StackPanel>
                <Grid>
                    <Label Content="Faults" FontSize="36" FontFamily="Bahnschrift" Padding="0" Height="40" Foreground="{DynamicResource TextColor}"/>
                    <Label x:Name="InfoFaultCount" Content="0" FontSize="36" FontFamily="Bahnschrift" Padding="0" Height="40" HorizontalAlignment="Right" HorizontalContentAlignment="Right" Foreground="{DynamicResource TextColor}"/>
                </Grid>
                <Expander Header="Warnings" Margin="10,0,10,5" Foreground="{DynamicResource TextColor}">
                    <ListView x:Name="InfoWarningList" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Margin="30,0,0,0">
                        <ListViewItem Content="No Warnings"/>
                    </ListView>
                </Expander>
                <Expander Header="Errors" Margin="10,0,10,5" Foreground="{DynamicResource TextColor}">
                    <ListView x:Name="InfoErrorList" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Margin="30,0,0,0">
                        <ListViewItem Content="No Errors"/>
                    </ListView>
                </Expander>
            </ListView>
        </Grid>
        <Grid x:Name="NewServerPanel" Grid.Column="1" Margin="15" Opacity="{DynamicResource Opacity}">
            <Border Margin="260,0,0,96" CornerRadius="4" Background="{DynamicResource TextBoxColor}">
